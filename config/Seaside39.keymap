#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

#define MOUSE 4
#define SCROLL 5
#define NUM 6

&mt {
    flavor = "balanced";
    quick-tap-ms = <300>;
};

&lt {
    flavor = "balanced";
    quick-tap-ms = <300>;
};

/ {
    combos { compatible = "zmk,combos"; };

    macros {
        basePass: to_layer_0 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp N2 &kp S &kp K &kp M &kp H &kp LS(B) &kp N3 &kp I &kp O &kp J &kp K &kp I>;
            label = "TO_LAYER_0";
        };

        pcNumber: pcNumber {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp F &kp J &kp N0 &kp N5 &kp R &kp N3 &kp N6 &kp N0 &kp N6 &kp N6 &kp N5 &kp N5>;
            label = "PCNUMBER";
        };

        digitalSign: digitalSign {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LEFT_ALT &kp Y &kp N2 &kp Y &kp N1>;
            label = "DIGITALSIGN";
        };

        myNumber: myNumber {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp N0 &kp N5 &kp N2 &kp N9 &kp N1 &kp N6>;
            label = "MYNUMBER";
        };

        bt0: bt0 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&tog_off 1>,
                <&macro_wait_time 200>,
                <&bt BT_SEL 0>,
                <&macro_wait_time 500>;

            label = "BT0";
        };

        bt1: bt1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&tog_off 1>,
                <&macro_wait_time 200>,
                <&bt BT_SEL 1>,
                <&macro_wait_time 500>;

            label = "BT1";
        };

        bt2: bt2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&tog_off 1>,
                <&macro_wait_time 200>,
                <&bt BT_SEL 2>,
                <&macro_wait_time 500>,
                <&tog_on 1>;

            label = "BT2";
        };
    };

    behaviors {
        lt_to_layer_0: lt_to_layer_0 {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TO_0";
            bindings = <&mo>, <&basePass>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        tog_on: toggle_layer_on_only {
            compatible = "zmk,behavior-toggle-layer";
            #binding-cells = <1>;
            display-name = "Toggle Layer On";
            toggle-mode = "on";
        };

        tog_off: toggle_layer_off_only {
            compatible = "zmk,behavior-toggle-layer";
            #binding-cells = <1>;
            display-name = "Toggle Layer Off";
            toggle-mode = "off";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_Win {
            bindings = <
&kp ESCAPE  &kp W     &kp E         &kp R       &kp T                                  &kp Y        &kp U  &kp I      &kp O    &kp P
&kp A       &kp S     &kp D         &lt 2 F     &kp G                                  &kp H        &kp J  &kp K      &lt 3 L  &lt 4 MINUS
&kp Z       &kp X     &kp C         &kp V       &kp B                                  &kp N        &kp M  &kp COMMA  &kp DOT  &kp SLASH
&kp LCTRL   &kp LWIN  &kp LEFT_ALT  &kp LSHIFT  &kp SPACE  &kp TAB      &kp BACKSPACE  &lt 2 ENTER                             &kp GRAVE
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PAGE_DOWN>;
        };

        default_iOS {
            bindings = <
&kp ESCAPE    &kp W     &kp E         &kp R       &kp T                                  &kp Y        &kp U  &kp I      &kp O    &kp P
&kp A         &kp S     &kp D         &lt 2 F     &kp G                                  &kp H        &kp J  &kp K      &lt 3 L  &lt 4 MINUS
&kp Z         &kp X     &kp C         &kp V       &kp B                                  &kp N        &kp M  &kp COMMA  &kp DOT  &kp SLASH
&kp LEFT_GUI  &kp LWIN  &kp LEFT_ALT  &kp LSHIFT  &kp SPACE  &kp TAB      &kp BACKSPACE  &lt 2 ENTER                             &kp LC(SPACE)
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PAGE_DOWN>;
        };

        MOUSE {
            bindings = <
&kp Q              &kp N7  &kp N8       &kp N9  &kp LEFT_BRACKET                              &kp C_MENU  &kp LEFT_ARROW  &kp UP_ARROW    &kp RIGHT_ARROW  &kp LG(LS(S))
&kp RIGHT_BRACKET  &kp N4  &kp N5       &kp N6  &kp KP_PLUS                                   &kp HOME    &mkp MB1        &kp DOWN_ARROW  &mkp MB2         &kp SINGLE_QUOTE
&kp NUHS           &kp N1  &kp N2       &kp N3  &kp KP_MINUS                                  &kp END     &kp LALT        &kp LCTRL       &kp LSHFT        &kp SEMI
&kp LS(INT1)       &kp N0  &kp INT_YEN  &trans  &kp PAGE_UP       &kp PAGE_DOWN      &kp DEL  &trans                                                       &trans
            >;
        };

        Function {
            bindings = <
&trans  &kp F7  &kp F8        &kp F9  &kp FSLH                           &kp LG(E)  &trans       &kp LC(LA(DEL))  &trans  &trans
&trans  &kp F4  &kp F5        &kp F6  &kp EQUAL                          &trans     &kp LS(TAB)  &kp TAB          &trans  &kp ESC
&trans  &kp F1  &kp F2        &kp F3  &kp QUESTION                       &trans     &trans       &trans           &trans  &trans
&trans  &trans  &kp LEFT_ALT  &trans  &trans        &trans      &kp DEL  &trans                                           &trans
            >;
        };

        Control {
            bindings = <
&kp LC(Q)  &kp LC(W)  &kp LC(E)  &kp LC(R)  &kp LC(T)                                                &trans        &mmv MOVE_UP  &mmv MOVE_DOWN  &trans  &trans
&kp LC(A)  &kp LC(S)  &kp LC(D)  &kp LC(F)  &kp LC(G)                                                &digitalSign  &trans        &trans          &trans  &trans
&kp LC(Z)  &kp LC(X)  &kp LC(C)  &kp LC(V)  &kp LC(B)                                                &bt0          &bt1          &bt2            &trans  &trans
&basePass  &pcNumber  &myNumber  &trans     &kp LA(LEFT_ARROW)  &kp LA(RIGHT_ARROW)      &kp LA(F4)  &kp LC(W)                                           &bootloader
            >;
        };
    };
};
